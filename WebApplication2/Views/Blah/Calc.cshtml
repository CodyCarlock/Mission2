@model calcModel
<!--A form that takes in the users grades and outputs what they will get when they click the calulate button-->
<h2>Grade Calculator</h2>
<p>Enter your grades for each category below (ex: .95)</p> <!--suggests the user to enter a decimal for their grade-->
<form method="post">
    <label>Assignments</label>
    <input  id="asmnt" asp-for="asmnt"/>
    <br />
    <label>Group Projects</label>
    <input  id="gp" asp-for="gp"/>
    <br />
    <label>Quizzes</label>
    <input  id="qz" asp-for="qz"/>
    <br />
    <label>Exams</label>
    <input  id="ex" asp-for="ex"/>
    <br />
    <label>Intex</label>
    <input  id="itx" asp-for="itx"/>
    <br />
    <input type="submit" value="Calculate" id="calc" />

    <!--Helps in data validation -->
    <div asp-validation-summary="All"></div>
</form>

<script src="~/js/calculator.js"></script>